                <script>
                    // Seleciona a imagem principal
                    const imagemPrincipal = document.querySelector('.imagemprincipal img');
                
                    // Aplica o efeito de zoom ao passar o mouse
                    imagemPrincipal.addEventListener('mouseover', () => {
                        imagemPrincipal.style.transform = 'scale(1.1)'; // Aplica o zoom
                    });
                
                    // Remove o efeito de zoom ao tirar o mouse
                    imagemPrincipal.addEventListener('mouseout', () => {
                        imagemPrincipal.style.transform = 'scale(1)'; // Retorna ao tamanho original
                    });
                
                    // Seleciona a segunda imagem (classe .imagem2)
                    const imagem2 = document.querySelector('.imagem2');
                
                    // Aplica o efeito de zoom ao passar o mouse
                    imagem2.addEventListener('mouseover', () => {
                        imagem2.style.transform = 'scale(1.1)'; // Aplica o zoom
                    });
                
                    // Remove o efeito de zoom ao tirar o mouse
                    imagem2.addEventListener('mouseout', () => {
                        imagem2.style.transform = 'scale(1)'; // Retorna ao tamanho original
                    });

                    const botaoTopo = document.getElementById('botaoTopo');

        // Mostra o bot√£o quando o usu√°rio rola a p√°gina
        window.addEventListener('scroll', () => {
            if (window.scrollY > 200) {
                botaoTopo.classList.add('mostrar');
            } else {
                botaoTopo.classList.remove('mostrar');
            }
        });

        // Rola suavemente at√© o topo quando o bot√£o √© clicado
        botaoTopo.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
